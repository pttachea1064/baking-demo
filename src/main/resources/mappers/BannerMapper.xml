<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.tedu.baking.mapper.BannerMapper">
    <select id="select" resultType="cn.tedu.baking.pojo.vo.BannerVO">
        SELECT id, img_url
        FROM t_banner
        ORDER BY sort
    </select>

    <select id="selectForAdmin" resultType="cn.tedu.baking.pojo.vo.BannerAdminVO">
        SELECT id, img_url, create_time
        FROM t_banner
        ORDER BY sort
    </select>

    <delete id="deleteById">
        DELETE
        FROM t_banner
        WHERE id = #{id}
    </delete>
</mapper>